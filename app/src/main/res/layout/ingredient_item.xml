<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="70dp"
    cardCornerRadius="5dp"
    cardElevation="10dp"
    contentPaddingLeft="10dp"
    contentPaddingRight="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:id="@+id/sv_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ingredient_name"
            android:text="unsalted butter, melted"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_ingredient_serving_size_and_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="6.0 TBLSP"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_ingredient_name"
            android:layout_marginEnd="3dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>